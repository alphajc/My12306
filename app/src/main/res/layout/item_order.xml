<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="订单:G20143Yq"
            android:id="@+id/textViewOrderNo" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="G108"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:id="@+id/textViewOrderTrainNo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2014-7-21"
                    android:id="@+id/textViewOderTime"
                    android:textColor="#a09c9c" />
            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:text="北京->成都"
                android:id="@+id/textViewOrderInterZone" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:text="2人"
                android:id="@+id/textViewPeopleAmount" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未支付"
            android:paddingBottom="8dp"
            android:id="@+id/textViewPayStatus"
            android:textColor="#fbb622" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="456.0"
            android:paddingTop="8dp"
            android:id="@+id/textViewTotalPrice" />
    </LinearLayout>

    <ImageView
        android:layout_width="0dp"
        android:layout_weight="0.8"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/imageViewOrder"
        android:src="@drawable/forward_25"/>
</LinearLayout>